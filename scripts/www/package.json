{
  "name": "ev-export-pro",
  "version": "1.1.0",
  "description": "新能源汽车出海智能助手 - EV Export Pro",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "keywords": ["ev", "export", "二手车", "出海"],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.evexport.pro",
    "productName": "新能源二手车出海助手",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "index.html",
      "css/**/*",
      "js/**/*",
      "assets/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}